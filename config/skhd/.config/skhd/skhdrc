# Focus window
alt - k : yabai -m window --focus stack.north || yabai -m window --focus north
alt - j : yabai -m window --focus stack.south || yabai -m window --focus south
alt - h : yabai -m window --focus stack.west  || yabai -m window --focus west
alt - l : yabai -m window --focus stack.east  || yabai -m window --focus east

# Focus display
lctrl + alt - h : yabai -m display --focus next
lctrl + alt - l : yabai -m display --focus prev

# Resize
alt + shift - h : yabai -m window --resize left:-40:0  || yabai -m window --resize right:-40:0
alt + shift - j : yabai -m window --resize bottom:0:40 || yabai -m window --resize top:0:40
alt + shift - k : yabai -m window --resize top:0:-40   || yabai -m window --resize bottom:0:-40
alt + shift - l : yabai -m window --resize right:40:0  || yabai -m window --resize left:40:0

# Reset split balance
shift + alt - e : yabai -m space --balance

# Warp
shift + alt + lctrl - j : yabai -m window --warp south
shift + alt + lctrl - k : yabai -m window --warp north
shift + alt + lctrl - h : yabai -m window --warp west
shift + alt + lctrl - l : yabai -m window --warp east

# Toggl
alt - a: yabai -m window --toggle float && yabai -m window --grid 6:6:1:1:4:4
alt - d: yabai -m space --toggle show-desktop
alt - f : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen
alt - p : yabai -m space --toggle padding && yabai -m space --toggle gap
alt - m : yabai -m space --toggle mission-control

alt -s : yabai -m window --stack east

alt + ctrl - j : yabai -m window --focus stack.next
alt + ctrl - k : yabai -m window --focus stack.prev
