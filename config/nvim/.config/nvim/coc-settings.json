{
  "coc.preferences.willSaveHandlerTimeout": 5000,
  "coc.preferences.formatOnSaveTimeout": 5000,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "go",
    "html",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "lua",
    "markdown",
    "python",
    "scss",
    "sh",
    "sql",
    "typescript",
    "typescriptreact",
    "xml",
    "yaml"
  ],

  "prettier.disableLanguages": ["java"],

  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  "http.proxyStrictSSL": false,

  "java.jdt.ls.vmargs": "-javaagent:/Users/krzmknt/.m2/repository/org/projectlombok/lombok/1.18.30/lombok-1.18.30.jar",
  "java.jdt.ls.java.home": "~/.local/share/mise/installs/java/corretto-21.0.1.12.1/bin",
  "java.checkstyle.": "./checkstyle.xml",
  "java.checkstyle.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.settings.url": "./eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",

  "python.jediEnabled": false,
  "pyright.enable": true,
  "python.pythonPath": "~/.venv",
  "python.venvPath": "./.venv",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "./.venv/bin/black",
  "python.formatting.blackArgs": [],
  "python.sortImports.path": "./.venv/bin/isort",
  "python.sortImports.args": ["--profile", "black"],
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": true,

  "Lua.diagnostics.globals": ["vim"]
}
